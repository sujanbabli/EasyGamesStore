<!-- ---------- Accessibility Script ---------- -->
<script>
    // Enables keyboard navigation (Enter/Space) for category cards
    document.querySelectorAll('.category-card').forEach(card => {
        card.addEventListener('keydown', e => {
            if (e.key === 'Enter' || e.key === ' ') card.click();
        });
    });
</script>
