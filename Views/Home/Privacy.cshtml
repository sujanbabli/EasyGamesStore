<!-- ================= PAGE STYLES ================= -->
<style>
    body {
        background-color: #ffffff;
    }

    /* Gradient text used for headings and icons */
    .text-gradient-primary {
        background: linear-gradient(90deg, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Consistent typography and color for paragraphs and lists */
    section p, section ul {
        font-size: 1rem;
        line-height: 1.6;
        color: #212529;
    }

    section li {
        margin-bottom: 0.5rem;
    }

    /* Card hover effect for team section */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(13, 110, 253, 0.15);
        }

    /* Circular team photos */
    img.rounded-circle {
        height: 120px;
        width: 120px;
        object-fit: cover;
        margin: 0 auto;
    }
</style>
