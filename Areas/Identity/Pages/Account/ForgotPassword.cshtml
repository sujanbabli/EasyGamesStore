@page
@model ForgotPasswordModel
@{
    // Setting the page title, which can be displayed in the <title> element or on the page
    ViewData["Title"] = "Forgot your password?";
}

<!-- Main container for the forgot password page -->
<div class="forgot-password-page"
     style="min-height: 100vh; background-color: #0b0d12; display: flex; align-items: center; justify-content: center; padding: 3rem 1rem;">

    <!-- Inner container styled with Bootstrap classes and custom CSS -->
    <div class="container bg-dark bg-opacity-75 text-light p-4 rounded-4 shadow-lg" style="max-width: 400px;">

        <!-- Page heading with gradient text -->
        <h2 class="text-center fw-bold text-gradient-primary mb-4">@ViewData["Title"]</h2>

        <!-- Subheading / instructions for the user -->
        <h5 class="text-light mb-3">Enter your email to reset your password.</h5>
        <hr class="border-secondary" />

        <!-- Form that will post the email address to the server -->
        <form method="post">

            <!-- Shows validation errors for the form if any -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Email input with floating label (Bootstrap form-floating) -->
            <div class="form-floating mb-3">
                <!-- Input is bound to Input.Email from ForgotPasswordModel -->
                <input asp-for="Input.Email"
                       class="form-control bg-dark text-light border-secondary"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com" />

                <!-- Label for the input field -->
                <label asp-for="Input.Email" class="text-light">Email</label>

                <!-- Validation message for email input -->
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Submit button for the form -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

<!-- Custom styling for the page -->
<style>
    /* Gradient effect for the main heading text */
    .text-gradient-primary {
        background: linear-gradient(90deg, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* General page styling */
    body, html {
        background-color: #0b0d12; /* dark background */
        color: #e9eef7; /* light text for contrast */
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif; /* clean modern font */
    }

    /* Styling for input boxes */
    .form-control {
        background-color: rgba(25, 27, 36, 0.9); /* dark semi-transparent background */
        border: 1px solid #495057;
        color: #e9eef7;
    }

        /* Input focus effect */
        .form-control:focus {
            border-color: #6610f2; /* purple border */
            box-shadow: 0 0 5px rgba(102, 16, 242, 0.5); /* glowing effect */
        }

    /* Primary button styles */
    .btn-primary {
        background-color: #6610f2;
        border: none;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        /* Hover effect for the button */
        .btn-primary:hover {
            background-color: #5200b7;
            box-shadow: 0 0 15px rgba(82, 0, 183, 0.6);
        }
</style>

<!-- Section that loads client-side validation scripts (for real-time validation without page reload) -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
